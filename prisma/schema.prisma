generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  email    String @unique
  id       Int    @id @default(autoincrement())
  name     String
  password String
}

model Listings {
  categoryId  Int
  createdAt   DateTime @default(now())
  description String?
  id          Int      @id @default(autoincrement())
  images      Json
  isSold      Boolean  @default(false)
  latitude    Float?
  longitude   Float?
  price       Int
  title       String
  userId      Int
}

model Message {
  content    String
  createdAt  DateTime @default(now())
  fromUserId Int
  id         Int      @id @default(autoincrement())
  listingId  Int?
  toUserId   Int
}
